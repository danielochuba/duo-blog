<section class="user-post">
    <div class="post-content">
        <% user = User.find(@user_post.author_id) %>
        <p class="post-stats"><span>Post <%= @user_post.id %> by <strong><%= user.name %></strong> </span><span>Comments: <%= @user_post.comments_counter %>, Likes: <%= @user_post.likes_counter %></span></p>
        <p><%= @user_post.text %></p>
    </div>
    <% if !@user_post.comments.empty? %>
        <div class="comments-card">
            <% @user_post.comments.each do |comment| %>
                <%user = User.find(comment.user_id)%>
                <p class="post-brief"><strong><%= user.name%>:</strong> <%= comment.text %></p>
            <% end %>
        </div>
    <% end %>
</section>

<%= link_to "Add Comment", new_user_post_comment_path(user_id: @user.id, post_id: @post.id), class: "button" %>
