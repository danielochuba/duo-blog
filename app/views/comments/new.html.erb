<%= form_with(model: @comment, url: create_post_comment_path(user_id: @user, post_id: @post), method: :post) do |f| %>
  <%= f.label :text %>
  <%= f.text_area :text %>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :post_id, value: @post.id %>

  <%= f.submit "Submit Comment" %>
<% end %>
